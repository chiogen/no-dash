{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": false,
    "declaration": true,
    "outDir": "build",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Bundler"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}